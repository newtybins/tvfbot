generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES")
}

model Blacklist {
  id     String  @id @unique
  reason String?
}

model User {
  id          String   @id @unique
  level       Int      @default(1)
  xp          Int      @default(1)
  stickyRoles String[]
  privateID   String?  @unique
  Private     Private?
}

model Private {
  topic       String?
  requestedAt DateTime? @db.Timestamptz(6)
  startedAt   DateTime? @db.Timestamptz(6)
  textID      String?
  voiceID     String?
  id          String    @id
  User        User      @relation(fields: [id], references: [privateID])
}

model Suggestion {
  id     Int    @id @default(autoincrement())
  author String
  text   String
  status Int?   @default(1)
}
