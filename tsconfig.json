{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "build",
        "esModuleInterop": true,
        "baseUrl": "./src",
        "paths": {
            "~structures/*": ["./lib/structures/*"],
            "~handler/*": ["./lib/handler/*"],
            "~config": ["./config"],
            "~utils": ["./lib/Utils"],
            "~emitters": ["./lib/emitters/index"]
        },
        "plugins": [{ "transform": "ts-transform-paths" }],
        "experimentalDecorators": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
